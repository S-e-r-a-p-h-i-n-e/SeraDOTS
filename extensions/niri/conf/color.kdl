// ~/.config/niri/conf/colors.kdl

layout {
    focus-ring {
        active-color "#924665" 
        
        inactive-color "#A37888"
    }

    shadow {
        // color0 is the main background color. 
        // If you want the shadow to be black regardless of wallpaper, use "#000000"
        color "#45454A" 
    }
}